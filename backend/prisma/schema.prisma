generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  AGENT
  USER
}

model Company {
  id         String   @id @default(uuid())
  name       String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  users              User[]
  customers          Customer[]
  whatsappInstances  WhatsAppInstance[]
  aiKnowledge        AIKnowledge?
  campaigns          Campaign[]
  tags               Tag[]

  @@map("companies")
}

model Tag {
  id        String   @id @default(uuid())
  companyId String   @map("company_id")
  name      String
  color     String?  @default("#8B5CF6") // Cor padrão roxa
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, name])
  @@index([companyId])
  @@map("tags")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String
  role         UserRole @default(USER)
  companyId    String   @map("company_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  company         Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  conversations   Conversation[]

  @@index([companyId])
  @@index([email])
  @@map("users")
}

model Customer {
  id         String   @id @default(uuid())
  companyId  String   @map("company_id")
  name       String
  phone      String
  email      String?
  tags       String[] @default([])
  notes      String?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  company        Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  messages       Message[]
  conversations  Conversation[]

  @@unique([companyId, phone])
  @@index([companyId])
  @@index([phone])
  @@index([email])
  @@map("customers")
}

enum WhatsAppStatus {
  DISCONNECTED
  CONNECTING
  CONNECTED
}

model WhatsAppInstance {
  id            String         @id @default(uuid())
  companyId     String         @map("company_id")
  instanceName  String         @map("instance_name")
  apiKey        String?        @map("api_key")
  qrCode        String?        @map("qr_code") @db.Text
  status        WhatsAppStatus @default(DISCONNECTED)
  phoneNumber   String?        @map("phone_number")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  company       Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  messages      Message[]

  @@unique([companyId, instanceName])
  @@index([companyId])
  @@index([status])
  @@map("whatsapp_instances")
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
  FAILED
}

enum SenderType {
  HUMAN
  AI
}

enum MessageFeedback {
  GOOD
  BAD
}

model Message {
  id                  String           @id @default(uuid())
  customerId          String           @map("customer_id")
  whatsappInstanceId  String           @map("whatsapp_instance_id")
  direction           MessageDirection
  content             String           @db.Text
  timestamp           DateTime
  status              MessageStatus    @default(SENT)
  messageId           String?          @map("message_id")
  senderType          SenderType?      @map("sender_type") @default(HUMAN)
  feedback            MessageFeedback? @map("feedback")
  feedbackNote        String?          @map("feedback_note") @db.Text
  mediaType           String?          @default("text") @map("media_type") // text, audio, image, video, document
  mediaUrl            String?          @map("media_url") @db.Text // URL ou base64 da mídia
  createdAt           DateTime         @default(now()) @map("created_at")
  updatedAt           DateTime         @updatedAt @map("updated_at")

  customer            Customer         @relation(fields: [customerId], references: [id], onDelete: Cascade)
  whatsappInstance    WhatsAppInstance @relation(fields: [whatsappInstanceId], references: [id], onDelete: Cascade)

  @@unique([whatsappInstanceId, messageId])
  @@index([customerId])
  @@index([whatsappInstanceId])
  @@index([timestamp])
  @@index([messageId])
  @@index([feedback])
  @@index([mediaType])
  @@map("messages")
}

model Conversation {
  id                 String   @id @default(uuid())
  customerId         String   @map("customer_id")
  companyId          String   @map("company_id")
  assignedToId       String?  @map("assigned_to_id")
  aiEnabled          Boolean  @default(true) @map("ai_enabled")
  needsHelp          Boolean  @default(false) @map("needs_help")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  customer           Customer              @relation(fields: [customerId], references: [id], onDelete: Cascade)
  assignedTo         User?                 @relation(fields: [assignedToId], references: [id], onDelete: SetNull)
  conversationExample ConversationExample?

  @@unique([customerId])
  @@index([companyId])
  @@index([assignedToId])
  @@index([aiEnabled])
  @@index([needsHelp])
  @@map("conversations")
}

model AIKnowledge {
  id                 String   @id @default(uuid())
  companyId          String   @unique @map("company_id")
  companyInfo        String?  @map("company_info") @db.Text
  productsServices   String?  @map("products_services") @db.Text
  toneInstructions   String?  @map("tone_instructions") @db.Text
  policies           String?  @db.Text

  // Configurações avançadas da IA
  provider           String?  @default("openai") // openai ou anthropic
  model              String?  // Nome do modelo específico (opcional)
  temperature        Float?   @default(0.7) // 0.0 a 1.0 (menor = mais conservador)
  maxTokens          Int?     @default(500) // Limite de tokens na resposta
  autoReplyEnabled   Boolean  @default(true) @map("auto_reply_enabled") // Resposta automática ativada

  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  company            Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@map("ai_knowledge")
}

model ConversationExample {
  id               String       @id @default(uuid())
  companyId        String       @map("company_id")
  conversationId   String       @unique @map("conversation_id")
  notes            String?      @db.Text
  createdAt        DateTime     @default(now()) @map("created_at")
  updatedAt        DateTime     @updatedAt @map("updated_at")

  conversation     Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([conversationId])
  @@map("conversation_examples")
}

enum CampaignType {
  MANUAL
  SCHEDULED
}

enum CampaignStatus {
  DRAFT
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELED
}

model Campaign {
  id                String         @id @default(uuid())
  companyId         String         @map("company_id")
  name              String
  messageTemplate   String         @map("message_template") @db.Text
  targetTags        String[]       @default([]) @map("target_tags")
  type              CampaignType
  status            CampaignStatus @default(DRAFT)
  scheduledAt       DateTime?      @map("scheduled_at")
  sentCount         Int            @default(0) @map("sent_count")
  failedCount       Int            @default(0) @map("failed_count")
  createdAt         DateTime       @default(now()) @map("created_at")
  updatedAt         DateTime       @updatedAt @map("updated_at")

  company           Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([status])
  @@index([type])
  @@index([scheduledAt])
  @@map("campaigns")
}
